<% if book.favorited_by?(current_user) %>
  <%= form_with(model: @favorite, url: book_favorites_path(book), method: :delete) do |f| %>
    <%= f.submit "♥#{book.favorites.count}", class: "btn btn-link fas fa-heart heart_red"%>
  <% end %>
<% else %>
  <%= form_with(model: @favorite, url: book_favorites_path(book), method: :post) do |f| %>
    <%= f.submit "♡#{book.favorites.count}", class: "btn btn-link fas fa-heart heart_blue"%>
  <% end %>
<% end %>